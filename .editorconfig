# Top-most EditorConfig file
root = true

# General settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120    # Set line length limit for readability

# Java files
[*.java]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
continuation_indent_size = 8    # Deeper indent for wrapped lines
tab_width = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2           # Common XML convention
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off     # Disable line length restriction for XML

# HTML files
[*.html]
indent_style = space
indent_size = 2           # Common practice for HTML
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# CSS files
[*.css]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off     # No line wrapping for JSON

# YAML files
[*.yml]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false # Retain trailing whitespace for Markdown
max_line_length = off

# Properties files
[*.properties]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.js]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Kotlin files
[*.kt]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Gradle build files
[*.gradle]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Groovy scripts
[*.groovy]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
